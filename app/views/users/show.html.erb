<h2><%= @user.username %></h2>

<p>
  Username: <%= @user.username %>
</p>

<p>
  Email: <%= @user.email %>
</p>

<p>
  <nav class="group">
    <%= button_to "Edit",
                  edit_user_url(@user),
                  method: :get %>
    <%= button_to "Change Password",
                  change_password_user_url(@user),
                  method: :get %>
  </nav>
</p>

<h3>Forms (<%= @user.forms.count %>)</h3>

<p>
  <%= button_to "Create New Form", new_form_url, method: :get %>
</p>

<% if @user.forms.count > 0 %>
  <%= render "forms_table", forms: @forms, page: @page %>
<% end %>

<nav><p><%= paginate @forms %></p></nav>