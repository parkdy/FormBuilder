<h2>Users (<%= @users.count %>)</h2>

<table>
  <th></th>
  <th>Username</th>
  <th>Email</th>
  <th>Registration Date</th>
  <th>Admin</th>
  <th>Activated</th>

  <% @users.each do |user| %>
    <tr>
      <td>
        <%= button_to "X", user_url(user, page: @page), method: :delete,
              data: { confirm: "Are you sure you want to delete this user?" },
              class: "small_btn delete_btn" %>
      </td>

      <td><%= link_to user.username, user_url(user) %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at %></td>
      <td><%= (user.admin? ? "Yes" : "No") %></td>
      <td><%= (user.activated? ? "Yes" : "No") %></td>
    </tr>
  <% end %>
</table>

<nav><p><%= paginate @users %></p></nav>